<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <!-- 滚动视图 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 产品图片 -->
            <ImageView
                android:id="@+id/incense_detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <!-- 产品名称 -->
            <TextView
                android:id="@+id/incense_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="香名"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- 产品描述 -->
            <TextView
                android:id="@+id/incense_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_anchor="@+id/scrollView"
        app:layout_anchorGravity="bottom|center">

        <!-- 水平布局，包含 投稿 和 购买 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 投稿按钮 -->
            <Button
                android:id="@+id/UserImpression"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="投稿する"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- 购买按钮 -->
            <Button
                android:id="@+id/open_url_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="購入する"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 水平布局，包含 お気に入り 和 他のユーザーの投稿 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- お気に入り按钮 -->
            <Button
                android:id="@+id/favorite_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="お気に入りに追加"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- 他のユーザーの投稿按钮 -->
            <Button
                android:id="@+id/btnViewPosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="他のユーザーの投稿"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
