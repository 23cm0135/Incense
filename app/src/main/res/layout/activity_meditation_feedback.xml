<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="20dp"
    android:fillViewport="true"
    tools:context=".MeditationFeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 询问冥想时的杂念情况 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今回の冥想の状態を教えてください"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/rgDistraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbNoDistraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雑念なし"/>

            <RadioButton
                android:id="@+id/rbLittleDistraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="少し雑念あり"/>

            <RadioButton
                android:id="@+id/rbMuchDistraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雑念が多かった"/>
        </RadioGroup>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!-- 询问用户是否保存 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今回の冥想を記録しますか？"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="保存"/>

            <Button
                android:id="@+id/btnDiscard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="破棄"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- 产品推荐区域 -->
        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            android:gravity="center">

            <!-- 推荐标题 -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌟 おすすめ商品 🌟"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- 产品名称 -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <!-- 圆形产品图片 -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:background="@drawable/circle_shape"/>

            <!-- 产品描述 -->
            <TextView
                android:id="@+id/productDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <!-- 购买按钮 -->
            <Button
                android:id="@+id/btnBuyProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛒 購入はこちら"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
