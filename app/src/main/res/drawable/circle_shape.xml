<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 圆形填充颜色 -->
    <solid android:color="#80B3E5FC"/> <!-- 透明的淡蓝色 -->

    <!-- 圆形边框 -->
    <stroke
        android:width="2dp"
        android:color="#50A6C1E0"/> <!-- 透明的边框 -->

    <!-- 圆形大小和内边距 -->
    <size
        android:width="150dp"
        android:height="150dp"/>

    <!-- 透明度 -->
    <corners android:radius="100dp"/>
</shape>
